{
  "name": "bdsa-schema-wrangler",
  "version": "1.0.0",
  "description": "BDSA Schema Wrangler - Metadata harmonization and DSA synchronization tools",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:wrangler": "cd apps/wrangler && npm run dev",
    "dev:sync-app": "cd apps/react-sync-app && npm run dev",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1"
  }
}