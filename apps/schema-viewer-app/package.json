{
  "name": "bdsa-schema-viewer",
  "private": true,
  "version": "1.0.0",
  "description": "Standalone BDSA Schema Viewer - A containerized service for viewing BDSA schemas",
  "scripts": {
    "copy-schema": "cp ../wrangler/public/bdsa-schema.json public/bdsa-schema.json && echo 'âœ… Copied latest bdsa-schema.json from wrangler'",
    "predev": "npm run copy-schema",
    "dev": "vite",
    "prebuild": "npm run copy-schema",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "serve": "vite preview --port 3000 --host 0.0.0.0"
  },
  "dependencies": {
    "@bdsa/schema-components": "file:../../packages/schema-components",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "vite": "^5.2.0"
  }
}