{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "BDSA Region Schema",
    "type": "object",
    "required": [
        "bdsa_region_ids"
    ],
    "properties": {
        "bdsa_region_ids": {
            "type": "object",
            "title": "Region Information",
            "required": [
                "regions"
            ],
            "properties": {
                "regions": {
                    "type": "object",
                    "title": "Regions",
                    "minItems": 1,
                    "additionalProperties": false,
                    "properties": {
                        "Midbrain": {
                            "type": "array",
                            "title": "Midbrain",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "3rd cranial nerve",
                                    "Substantia nigra",
                                    "Red nucleus",
                                    "Superior colliculus"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Pons": {
                            "type": "array",
                            "title": "Pons",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Superior cerebellar peduncle",
                                    "Inferior colliculus",
                                    "Locus coeruleus",
                                    "Pontine base / fibers"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Medulla": {
                            "type": "array",
                            "title": "Medulla",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Dorsal motor nucleus of vagus",
                                    "Hypoglossal nucleus",
                                    "Inferior olive",
                                    "Medullary velum",
                                    "Pyramid"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Olfactory": {
                            "type": "array",
                            "description": "Olfactory bulb region.",
                            "title": "Olfactory",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Bulb",
                                    "Tract"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Parietal": {
                            "type": "array",
                            "title": "Parietal",
                            "description": "Parietal lobe region.",
                            "items": {
                                "type": "string",
                                "description": "Gyri present:",
                                "enum": [
                                    "Super",
                                    "Middle",
                                    "Inferior",
                                    "Angular gyrus",
                                    "Supramarginal gyrus"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Temporal_pole": {
                            "type": "array",
                            "title": "Temporal Pole",
                            "description": "Temporal pole region.",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Frontal": {
                            "type": "array",
                            "description": "Frontal lobe region.",
                            "title": "Frontal",
                            "items": {
                                "type": "string",
                                "description": "Gyri present:",
                                "enum": [
                                    "Superior",
                                    "Middle",
                                    "Inferior"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Temporal": {
                            "type": "array",
                            "description": "Temporal lobe region.",
                            "title": "Temporal",
                            "items": {
                                "type": "string",
                                "description": "Gyri present:",
                                "enum": [
                                    "Superior",
                                    "Middle",
                                    "Inferior"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Hippocampus": {
                            "type": "array",
                            "title": "Hippocampus",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "CA1-4 with dentate gyrus",
                                    "Parahippocampal gyrus",
                                    "Tail of caudate",
                                    "Lateral geniculate nucleus",
                                    "Occipital temporal gyrus"
                                ]
                            }
                        },
                        "Ant_Cingulate": {
                            "type": "array",
                            "title": "Anterior Cingulate",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Corpus callosum",
                                    "Superior frontal"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Post_Cingulate": {
                            "type": "array",
                            "title": "Posterior Cingulate",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Corpus callosum",
                                    "Superior frontal"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Amygdala": {
                            "type": "array",
                            "title": "Amygdala",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Entorhinal cortex"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Thalamus": {
                            "type": "array",
                            "title": "Thalamus",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Mammillary body",
                                    "Subthalamic nucleus",
                                    "Mammilo-thalmaic tract",
                                    "Anterior nucleus of thalamus",
                                    "Pulvinar"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "White_matter": {
                            "type": "array",
                            "title": "White Matter",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Frontal",
                                    "Parietal",
                                    "Temporal",
                                    "Occipital"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Cerebellum": {
                            "type": "array",
                            "title": "Cerebellum",
                            "items": {
                                "type": "string",
                                "description": "Anatomical landmarks present:",
                                "enum": [
                                    "Dentate",
                                    "Vermis",
                                    "Cortex"
                                ]
                            },
                            "minItems": 0,
                            "uniqueItems": true
                        },
                        "Basal_Ganglia": {
                            "type": "array",
                            "title": "Basal Ganglia",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Occipital": {
                            "type": "array",
                            "title": "Occipital",
                            "description": "Occipital cortex region.",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Motor_cortex": {
                            "type": "array",
                            "title": "Motor Cortex",
                            "description": "Primary motor cortex region.",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Insula": {
                            "type": "array",
                            "title": "Insula",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Frontal_pole": {
                            "type": "array",
                            "title": "Frontal Pole",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Spinal_cord": {
                            "type": "array",
                            "title": "Spinal Cord",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        },
                        "Hypothalamus": {
                            "type": "array",
                            "title": "Hypothalamus",
                            "items": {
                                "type": "string",
                                "description": "No anatomical landmarks to select for this region."
                            },
                            "maxItems": 0
                        }
                    }
                },
                "hemisphere": {
                    "type": "string",
                    "title": "Hemisphere",
                    "enum": [
                        "left",
                        "right"
                    ]
                },
                "sliceOrientation": {
                    "title": "Slice Orientation",
                    "type": "string",
                    "enum": [
                        "axial",
                        "coronal",
                        "sagittal"
                    ]
                },
                "damage": {
                    "type": "array",
                    "title": "Damage",
                    "description": "Specifies tissue damage in this region and the cause of it.",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Infarct",
                            "Lacune",
                            "Microinfarct",
                            "CTE",
                            "TBI"
                        ]
                    }
                },
                "sliceThickness": {
                    "type": "number",
                    "title": "Slice Thickness",
                    "description": "Thickness of the tissue slice in microns (μm). This represents the physical thickness of the tissue section.",
                    "minimum": 0.1,
                    "maximum": 1000,
                    "multipleOf": 0.1
                }
            }
        }
    }
}