# Development Dockerfile with hot reload support
FROM node:18-alpine

# Install Python and dependencies
RUN apk add --no-cache \
    python3 \
    py3-pip \
    python3-dev \
    build-base

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip3 install --no-cache-dir --break-system-packages -r requirements.txt

# Copy package files and install Node dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the application
# (These will be overridden by volume mounts in docker-compose.dev.yml)
COPY . .

# Expose ports
EXPOSE 3000 8000

# Default command (will be overridden in docker-compose.dev.yml)
CMD ["sh", "-c", "python -m uvicorn api.main:app --host 0.0.0.0 --port 8000 --reload & npm run dev -- --host 0.0.0.0"]

